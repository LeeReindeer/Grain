<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="120dp"
                                   android:layout_marginStart="@dimen/margin_8dp"
                                   android:layout_marginEnd="@dimen/margin_8dp"
                                   android:layout_marginBottom="@dimen/margin_4dp"
                                   app:cardCornerRadius="8dp"
                                   app:cardElevation="8dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:layout_height="match_parent"
                android:layout_width="120dp"
                android:id="@+id/scoreText"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:background="@color/green"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="100"
                style="@style/text_view_style"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_gravity="center">

            <TextView
                    android:id="@+id/subjectNameText"
                    android:textSize="18sp"
                    style="@style/text_view_style"
                    android:padding="0dp"
                    android:layout_margin="@dimen/margin_8dp"
                    tools:text="大学生创业基础(重修)"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                <TextView
                        android:id="@+id/subjectGradeText"
                        style="@style/text_view_style"
                        android:padding="0dp"
                        android:layout_marginStart="@dimen/margin_4dp"
                        android:textColor="@color/grey"
                        tools:text="4.5学分"/>

                <TextView
                        android:id="@+id/subjectPropertyText"
                        style="@style/text_view_style"
                        android:padding="0dp"
                        android:layout_marginStart="@dimen/margin_4dp"
                        android:textColor="@color/grey"
                        tools:text="公共必修课"/>

                <TextView
                        android:id="@+id/subjectTimeText"
                        style="@style/text_view_style"
                        android:padding="0dp"
                        android:layout_marginStart="@dimen/margin_4dp"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        tools:text="2018-2019 第1学期" android:textAlignment="center" android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>