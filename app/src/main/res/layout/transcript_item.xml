<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="120dp"
                                   android:layout_marginStart="@dimen/margin_16dp"
                                   android:layout_marginEnd="@dimen/margin_16dp"
                                   android:layout_marginTop="@dimen/margin_8dp"
                                   android:layout_marginBottom="@dimen/margin_8dp"
                                   app:cardCornerRadius="4dp"
                                   app:cardElevation="4dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/finalGradeText"
                android:layout_height="match_parent"
                android:layout_width="100dp"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@color/green"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="100"
                style="@style/text_view_style"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

            <TextView
                    android:id="@+id/subjectNameText"
                    android:textSize="16sp"
                    style="@style/text_view_style"
                    android:padding="0dp"
                    android:layout_margin="@dimen/margin_16dp"
                    tools:text="大学生创业基础(重修)"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginBottom="@dimen/margin_16dp">
                <!--android:layout_gravity="center">-->

                <TextView
                        android:id="@+id/subjectGradeText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        tools:text="4.5学分"/>

                <TextView
                        android:id="@+id/subjectPropertyText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        tools:text="公共必修课"/>

                <TextView
                        android:id="@+id/subjectTimeText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        tools:text="2018-2019-1"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="平时成绩:"/>
                <TextView
                        android:id="@+id/usualGradeText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        tools:text="100"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="期末成绩:"/>
                <TextView
                        android:id="@+id/examGradeText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        tools:text="90"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>